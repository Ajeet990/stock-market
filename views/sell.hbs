<div class="my-5">
    {{#each rows}}
    
        <strong>Bank Name : </strong>{{this.name}}
        <hr>
        <strong>Per Stock Cost : </strong> Rs. {{this.per_s_cost}}<hr>
        <strong>Number of stocks : </strong>{{this.stock_amt}} only<hr>
        <strong>Amount : </strong> Rs. {{this.amount}}<hr>
        <strong>Bought Date : </strong>{{this.date}}<hr>
    {{/each}}
</div>


